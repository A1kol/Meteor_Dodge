<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<Pane fx:id="gamePane"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.meteorgame.GameController"
      prefWidth="600" prefHeight="800"
      focusTraversable="true">

    <Label fx:id="scoreLabel" text="Счёт: 0" layoutX="10" layoutY="10" style="-fx-font-size: 24px; -fx-text-fill: black;"/>
    <Button fx:id="restartButton" text="Начать сначала" layoutX="250" layoutY="400" visible="false" />

</Pane>




